<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
      
    <!-- android:keepScreenOn="true" prevents uninted pauses -->
    <TextView 
        android:keepScreenOn="true" 
        android:id="@+id/title"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="@string/hello"
        android:textSize="24sp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/leftHand"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Map Left Hand Rule" />

        <Button
            android:id="@+id/rightHand"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Map Right Hand Rule" />

        <Button
            android:id="@+id/solveMaze"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Solve Maze" />

        <ToggleButton
            android:id="@+id/killProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kill" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/dragRace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag Race" />

        <Button
            android:id="@+id/goldRush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gold Rush" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/turnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Left" />

        <Button
            android:id="@+id/turnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Right" />

        <Button
            android:id="@+id/calibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calibrate" />

    </LinearLayout>
    
    <ScrollView android:id="@+id/scroller"
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent"
                android:background="@drawable/box">
        <TextView android:id="@+id/text"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:paddingBottom="8dip" 
                  android:layout_weight="1" />
    </ScrollView>
    
</LinearLayout>
